{
  "private": true,
  "name": "shiny-texteditor",
  "version": "0.1.0",
  "type": "module",
  "description": "Shiny-react template with shadcn/ui, tailwindcss, and opinionated editor and build configuration",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail -c \"cyan.bold,magenta.bold\" -n \"BUILD,SHINY\" \"npm run watch\" \"npm run shinyapp\"",
    "build": "concurrently -c \"cyan.bold,green.bold\" -n \"TSC,BUILD\" \"tsc --noEmit\" \"tsx build.ts\"",
    "watch": "concurrently --kill-others-on-fail -c \"cyan.bold,green.bold\" -n \"TSC,BUILD\" \"tsc --noEmit --watch --preserveWatchOutput\" \"tsx build.ts --watch\"",
    "shinyapp": "Rscript -e \"options(shiny.autoreload = TRUE); shiny::runApp('r/app.R', port=${PORT:-8000})\"",
    "build-prod": "tsc --noEmit && tsx build.ts --production",
    "clean": "rm -rf r/www/app"
  },
  "author": "Winston Chang",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.1",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.9",
    "esbuild-plugin-tailwindcss": "^2.1.0",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-python": "^6.2.1",
    "@posit/shiny-react": "^0.0.14",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-switch": "^1.2.6",
    "@uiw/codemirror-theme-github": "^4.25.2",
    "@uiw/codemirror-theme-vscode": "^4.25.2",
    "@uiw/react-codemirror": "^4.25.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "codemirror-lang-r": "^0.1.1",
    "lucide-react": "^0.542.0",
    "motion": "^12.23.24",
    "radix-ui": "^1.4.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1"
  }
}
